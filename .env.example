# RunPod API Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# REQUIRED
# ============================================================================

# RunPod API key for serverless workers
RUNPOD_API_KEY=your_runpod_api_key_here

# OpenAI API key for GPT text and vision completions
OPENAI_API_KEY=your_openai_api_key_here

# Replicate API token for image generation and upscaling
REPLICATE_API_TOKEN=your_replicate_api_token_here

# AWS S3 credentials (required for file storage)
AWS_ACCESS_KEY=your_aws_access_key_here
AWS_ACCESS_SECRET=your_aws_secret_key_here
AWS_REGION=us-west-1

# AWS S3 bucket names
AWS_USER_FILES_BUCKET=storyboard-user-files
AWS_USER_IMAGES_BUCKET=your_images_bucket_name
AWS_OUTFIT_BUCKET=your_outfit_bucket_name

# ============================================================================
# OPTIONAL - Pod Configuration
# ============================================================================

# API key for direct pod authentication
SB_SPOT_API_KEY=your_pod_api_key_here

# Pod name prefix (default: sb_spot)
SB_SPOT_NAME=sb_spot

# ============================================================================
# OPTIONAL - Serverless Endpoint IDs
# ============================================================================

# Endpoint ID for wizard mode (speed 100)
RUNPOD_SERVER_100_ID=your_endpoint_id_100

# Endpoint ID for regular mode (speed 150)
RUNPOD_SERVER_150_ID=your_endpoint_id_150

# Endpoint ID for Schnell/fast generation
RUNPOD_SERVER_SCHNELL_ID=your_schnell_endpoint_id

# Endpoint ID for poster frame generation
RUNPOD_SERVER_POSTER_ID=your_poster_endpoint_id

# ============================================================================
# OPTIONAL - Timeout Configuration (in seconds)
# ============================================================================

# Pod request timeout (default: 600 = 10 minutes)
POD_TIMEOUT=600

# Serverless sync timeout (default: 700 = ~12 minutes)
SYNC_TIMEOUT=700

# Polling interval for serverless status checks (default: 1.0 second)
POLLING_INTERVAL=1.0

# Maximum polling duration (default: 180 = 3 minutes)
MAX_POLLING_DURATION=180

# Maximum number of polling attempts (default: 120)
MAX_POLLING_ATTEMPTS=120

# ============================================================================
# USAGE EXAMPLE
# ============================================================================

# For pod endpoint, you can pass it directly in code:
# POD_ENDPOINT=https://xxx-8000.proxy.runpod.net
